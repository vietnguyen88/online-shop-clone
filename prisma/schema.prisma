generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  price        Int
  main_img_url String   @map("img_url")
  sub_img_url  String[]
  desc         String
  // slug         String?
  gender       String?
  category     String?
}
